# Upcapto Production Environment Variables

# MongoDB Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/upcapto?retryWrites=true&w=majority
MONGODB_DATABASE=upcapto
MONGODB_POOL_SIZE=10
MONGODB_TIMEOUT=5000
MONGODB_SOCKET_TIMEOUT=45000
MONGODB_CONNECT_TIMEOUT=10000

# WhatsApp Business API
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_ACCESS_TOKEN=your_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
ADMIN_PHONE=+919876543210

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@upcapto.com
FROM_NAME=Upcapto Team

# Enhanced Security & Rate Limiting
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_here_minimum_32_characters
SESSION_SECRET=your_session_secret_key_here_32_characters
API_KEY=your_secure_api_key_for_internal_use

# Rate Limiting Configuration
RATE_LIMIT_MAX=10
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_BLOCK_DURATION=3600000
MAX_REQUEST_SIZE=1048576
CORS_ORIGINS=https://upcapto.com,https://www.upcapto.com

# Advanced Security Features
IP_WHITELIST=127.0.0.1,::1
IP_BLACKLIST=
SUSPICIOUS_PATTERN_DETECTION=true
AUTO_BLOCK_SUSPICIOUS_IPS=true
SECURITY_TESTING_ENABLED=true
SECURITY_MONITORING=true
SECURITY_ALERT_THRESHOLD=10

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info
HEALTH_CHECK_INTERVAL=30000

# Performance & Caching
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
MAX_CONCURRENT_REQUESTS=100

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://upcapto.com
PORT=3000

# Security Headers
SECURITY_HEADERS=true
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'
HSTS_MAX_AGE=31536000
